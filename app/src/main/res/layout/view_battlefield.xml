<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/card_layout">

    <TableRow
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r0_p0"
            android:layout_width="fill_parent"
            android:layout_height="90dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r0_p1"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r0_p2"
            android:layout_width="fill_parent"
            android:layout_height="90dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r1_p0"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r1_p1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r1_p2"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r2_p0"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r2_p1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <org.owls.opentriad.view.CardView
            android:id="@+id/cardboard_r2_p2"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </TableRow>

</TableLayout>